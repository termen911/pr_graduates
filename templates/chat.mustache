<div class="container">
    <div class="row d-none" id="time-update-container">
        <div class="col d-flex justify-content-end">
            Последнее обновление&nbsp;<span id="time-update"></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="messaging d-none" id="main-messaging">
                <div class="inbox_msg">
                    <div class="mesgs">
                        <div id="main-messaging-container"></div>
                        <div class="form-group mt-4 row">
                            <div id="main-messaging-quote"></div>
                            <div class="textarea-container position-relative col-12">
                                <textarea id="textarea-container__input"
                                          class="textarea-container__input"
                                          data-autoresize
                                          rows="2"
                                          placeholder="Введите текст сообщения..."></textarea>
                                <button class="position-absolute textarea-container__btn" id="textarea-container__btn">
                                    {{#pix}}i/send, local_pr_graduates{{/pix}}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>